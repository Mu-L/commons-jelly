<?xml version="1.0"?>

<!--
Basic thread group example.
-->

<jelly xmlns="jelly:core" xmlns:threads="jelly:threads">

    <threads:group var="group1">
        <threads:thread>
            <threads:sleep for="100"/>
            1
        </threads:thread>

        <threads:thread>
            <threads:sleep for="100"/>
            2
        </threads:thread>
    </threads:group>

    <threads:thread>
        <!-- wait for both thread 1 and 2 to complete -->
        <threads:waitFor group="${group1}"/>
        3
    </threads:thread>

</jelly>