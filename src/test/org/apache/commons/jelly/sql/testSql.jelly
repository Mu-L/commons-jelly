<?xml version="1.0"?>
<j:jelly xmlns:j="jelly:core" xmlns:sql="jelly:sql">

  <sql:setDataSource 
  	var="db"
    url="${databaseUrl}" 
    driver="${databaseDriver}" 
    user="${databaseUser}"
    password="${databasePassword}"/>

  <sql:query var="results" dataSource="${db}">
      select * from ${databaseTable}
  </sql:query>

  <dataSet>
    <size>${results.rowCount}</size>
  </dataSet>

</j:jelly>


